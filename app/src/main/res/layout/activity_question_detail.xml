<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus.bihu.Question_detail"
    >

    <TextView
        android:id="@+id/avator"
        android:layout_toRightOf="@id/detail_back"
        android:layout_toLeftOf="@id/point_image"
        android:layout_width="match_parent"
        android:layout_above="@id/obtain_answer"
        android:layout_below="@id/detail_back"
        android:layout_height="match_parent"
        android:textSize="30sp"
        android:scrollbars="vertical"
        android:fadeScrollbars="false"
        />


    <ImageView
        android:id="@+id/detail_back"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:src="@drawable/sign_back"
        />

    <TextView
        android:id="@+id/authorid"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_below="@id/detail_back"/>
    <TextView
        android:id="@+id/authorName"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_below="@id/authorid"/>
    <ImageView
        android:id="@+id/image_author"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_below="@id/authorName"/>


    <TextView
        android:id="@+id/obtain_answer"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="查看回答"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>
    <TextView
        android:id="@+id/to_answer"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@id/avator"
        android:text="我来回答"
        android:textSize="20sp"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/point_image"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_alignParentRight="true"
        android:text="图片"
        android:textSize="15sp"
        android:textAlignment="center"
        />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/detail_recycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/avator"
        android:layout_below="@id/point_image"
        android:layout_above="@id/obtain_answer"></android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/cheer_text"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_author"
        android:text="已赞"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/cheer_count"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/cheer_text"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/cheer"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="点赞"
        android:textColor="@color/red"
        android:layout_below="@id/cheer_count"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/navie_text"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/cheer"
        android:text="已踩"
        android:textAlignment="center"
        />
    <TextView

        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:id="@+id/navie_count"
        android:textAlignment="center"
        android:layout_below="@id/navie_text"/>

    <TextView
        android:id="@+id/navie"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:text="踩"
        android:textAlignment="center"
        android:layout_below="@id/navie_count"
        />
    <TextView
        android:id="@+id/collect"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/navie"
        android:textAlignment="center"
        android:text="收藏"/>
    <TextView
        android:id="@+id/recent"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/collect"
        />

    <TextView
        android:id="@+id/answercount"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_below="@id/recent"/>

</RelativeLayout>
