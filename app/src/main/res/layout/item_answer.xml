<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="220dp"
    >
    <RelativeLayout
        android:id="@+id/ia_layout_hold"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/mlistshape">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ia_cirimag_authorava"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/item_answer_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:id="@+id/item_answer_content"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/ia_cirimag_authorava"
            android:layout_toRightOf="@id/ia_cirimag_authorava"
            android:layout_marginLeft="100dp"
            android:maxLength="10"
            />

        <TextView
            android:id="@+id/c1"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/ia_txt_naviecount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/c1"
            android:layout_marginRight="20dp"
            />
        <ImageView
            android:id="@+id/ia_imag_navie"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/ia_txt_naviecount"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/navienew"/>
        <TextView
            android:id="@+id/ia_txt_cheercount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/ia_imag_navie"/>
        <ImageView
            android:id="@+id/ia_imag_cheer"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/cheernew"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/ia_txt_cheercount"/>

    </RelativeLayout>



   <RelativeLayout

       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_below="@id/ia_layout_hold">

       <TextView
           android:id="@+id/b1"
           android:layout_width="1dp"
           android:layout_height="match_parent"
           android:layout_alignParentRight="true"
           />
       <ImageView
           android:layout_width="50dp"
           android:layout_height="match_parent"
           android:src="@drawable/sanjiiao"
           android:layout_toLeftOf="@id/b1"
           android:alpha="100"
           android:layout_marginRight="30dp"/>
   </RelativeLayout>



</RelativeLayout>